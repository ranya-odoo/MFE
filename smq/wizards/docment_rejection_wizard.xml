<odoo>
    <record id="view_document_rejection_wizard" model="ir.ui.view">
    <field name="name">document.rejection.wizard.form</field>
    <field name="model">document.rejection.wizard</field>
    <field name="arch" type="xml">
        <form string="Rejet de la documentation">
            <group>
                <field name="raison"/>
            </group>
            <footer>
                <button string="Confirmer" type="object" name="action_confirmer_rejet" class="btn-primary"/>
                <button string="Annuler" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

</odoo>